android:paddingBottom="2dip"  
android:paddingLeft="12dip"  
android:paddingRight="12dip"  
xmlns:android="http://schemas.android.com/apk/res/android">  

<TextView android:text="TextView1" 
 android:id="@+id/topTextView"  
